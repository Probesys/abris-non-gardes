{% extends 'admin/base-admin.html.twig' %}

{% block title %}{{discussion}}{% endblock %}

{% block breadcrumb %}
   <li class="breadcrumb-item"><a href="{{ path('admin_abris_edit', {'id' : discussion.abris.id})}}">{{ discussion.abris }}</a> </li>
   <li class="breadcrumb-item active">{{ discussion }}</li>
{% endblock breadcrumb %}

{% block body %}
   {% include 'admin/default/_messages.html.twig' with {'messages':discussion.messages} %}
      <hr>
      <blockquote class="quote-secondary">
          <h3>{{'Entities.Message.actions.create_new'|trans()}}</h3>
          <form action="{{ path('message_new', {'id' : discussion.id}) }}" method="post">
              <div class="form-group">
              <label for="message">{{'Generics.fields.description'|trans()}}</label>
              <textarea name="message" class="form-control summernote"></textarea>
              </div>
              <input type="submit" class="btn btn-primary" value="{{'Generics.actions.save'|trans()}}">
          </form>
      </blockquote>
   {% endblock body %}
