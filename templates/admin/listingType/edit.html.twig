{% extends 'admin/base-admin.html.twig' %}

{% block title %}
  {{ 'Entities.ListingType.actions.edit'|trans }} "{{ entity.name }}"
{% endblock title %}

{% block breadcrumb %}
   <li class="breadcrumb-item"><a href="{{ path('listingType_index') }}">{{ 'Entities.ListingType.title'|trans }}</a></li>
   <li class="breadcrumb-item active">{{ 'Entities.ListingType.actions.edit'|trans }} "{{ entity.name }}"</li>
{% endblock breadcrumb %}

{% block body %}

    {% include 'admin/default/updatedByDiv.html.twig' with {'object': entity} %}

    {{ form_start(form) }}
    {{ form_widget(form) }}

    <div class="btn-group mt-4">
        <a class="btn btn-danger" href="{{ path('listingType_delete', {'id':entity.id }) }}" data-toggle="tooltip" data-placement="top" title="{{ 'Generics.actions.remove'|trans() }}" data-container="body" onclick="return confirm('{{ 'Generics.messages.confirmationDeleteMessageQuestion'|trans }}');" >
            <i class="fas fa-trash-alt"></i>
        </a>
        <a class="btn btn-default" data-toggle="tooltip" data-placement="top" title="{{ 'actions.backToTheList'|trans() }}" data-container="body" href="{{ path('listingValue_index') }}">
            <i class="fas fa-list"></i>&nbsp;<span>{{ 'Generics.actions.backToTheList'|trans() }}</span>
        </a>
        <input type="submit" class="btn btn-primary" value="{{ 'Generics.actions.save'|trans() }}">
    </div>
    {{ form_end(form) }}
{% endblock %}
