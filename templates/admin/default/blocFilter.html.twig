<div class="row">
   <div class="col-lg-12">
      <div class="bg-light border rounded">
                 
         {{ form_start(search_form) }}
         <div class="d-flex bd-highlight align-items-center">
            {%  for field in search_form.children %}
               <div class="p-2 bd-highlight ">{{ form_row(field) }}</div>
            {%  endfor  %}
            <br>
            <div class="ml-auto p-2 bd-highlight"><button type="submit" name="filter_action" class="btn btn btn-success" value="filter">{{'Generics.actions.filter'|trans}}</button></div>
            <div class="p-2 bd-highlight"><button type="submit" name="filter_action" class="btn btn-link " value="reset">{{'Generics.actions.clean'|trans}}</button></div>
         </div>
         {{ form_end(search_form) }}
      </div>
   </div>
</div>


