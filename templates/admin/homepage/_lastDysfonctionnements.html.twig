{%  set tabStatus = { '47': 'danger', '48': 'warning', '49': 'success'} %}
<div class="card">
   <div class="card-header border-transparent">
      <h3 class="card-title">{{ 'Entities.Dysfonctionnement.lastest'|trans() }}</h3>

      <div class="card-tools">
         <button type="button" class="btn btn-tool" data-card-widget="collapse">
            <i class="fas fa-minus"></i>
         </button>
         <button type="button" class="btn btn-tool" data-card-widget="remove">
            <i class="fas fa-times"></i>
         </button>
      </div>
   </div>
   <!-- /.card-header -->
   <div class="card-body p-0">
      <div class="table-responsive">
         <table class="table table-striped table-valign-middle table-sm">
            <thead>
               <tr>
                  <th>Date</th>
                  <th>{{ 'Entities.Dysfonctionnement.fields.abris'|trans() }}</th>
                  <th>{{ 'Entities.Dysfonctionnement.fields.elementDys'|trans }} </th>
                  <th>{{ 'Entities.Dysfonctionnement.fields.statusDys'|trans() }}</th>
               </tr>
            </thead>
            <tbody>
               {%  for dysfonctionnement in lastDysfonctionnements %}
                  <tr>
                     <td><a href="{{ path('dysfonctionnement_edit', {'id': dysfonctionnement.id}) }}">{{ dysfonctionnement.created|date('d-m-Y') }}</a></td>
                     <td><a href="{{ path('admin_abris_edit', {'id': dysfonctionnement.abris.id}) }}">{{ dysfonctionnement.abris }}</a></td>
                     <td>{{ dysfonctionnement.natureDys }}</td>
                     <td>{% if dysfonctionnement.statusDys %}<span class="badge badge-{{tabStatus[dysfonctionnement.statusDys.id]}}">{{ dysfonctionnement.statusDys }}</span>{% endif %}</td>
                  </tr>
               {%  endfor %}
            </tbody>
         </table>
      </div>
      <!-- /.table-responsive -->
   </div>

   <div class="card-footer clearfix">
      <a href="{{ path('dysfonctionnement_index') }}" class="btn btn-sm btn-secondary float-right">{{ 'Entities.Dysfonctionnement.actions.viewAllMessages'|trans() }}</a>
   </div>
   <!-- /.card-footer -->
</div>
