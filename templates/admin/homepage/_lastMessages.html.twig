<div class="card">
   <div class="card-header border-transparent">
      <h3 class="card-title">{{ 'Entities.Message.latest'|trans() }}</h3>

      <div class="card-tools">
         <button type="button" class="btn btn-tool" data-card-widget="collapse">
            <i class="fas fa-minus"></i>
         </button>
         <button type="button" class="btn btn-tool" data-card-widget="remove">
            <i class="fas fa-times"></i>
         </button>
      </div>
   </div>
   <!-- /.card-header -->
   <div class="card-body p-0">
      <div class="table-responsive">
         <table class="table table-striped table-valign-middle  table-sm">
            <thead>
               <tr>
                  <th>Date</th>
                  <th>{{ 'Entities.Message.fields.subject'|trans() }}</th>
                  <th>{{ 'Entities.Dysfonctionnement.fields.abris'|trans() }}</th>
                  <th>{{ 'Entities.Message.fields.discussion'|trans }} </th>
               </tr>
            </thead>
            <tbody>
               {%  for message in messages %}
                  <tr>
                     <td>{{ message.created|date('d-m-Y') }}</td>
                     <td><a href='{{ path('admin_discussion_show', {'id': message.discussion.id}) }}#message-{{ message.id }}'>{{ message.subject }}</a>
                     <td><a href="{{ path('admin_abris_edit', {'id': message.discussion.abris.id}) }}">{{ message.discussion.abris }}</a></td>
                     <td><a href='{{ path('admin_discussion_show', {'id': message.discussion.id}) }}'>{{ message.discussion }}</a>
                  </tr>
               {%  endfor %}
            </tbody>
         </table>
      </div>
      <!-- /.table-responsive -->
   </div>

   <div class="card-footer clearfix">
      <a href="{{ path('admin_message_index') }}" class="btn btn-sm btn-secondary float-right">{{ 'Entities.Message.actions.viewAllMessages'|trans() }}</a>
   </div>

   <!-- /.card-footer -->
</div>
