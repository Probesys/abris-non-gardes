{% extends 'admin/base-admin.html.twig' %}

{% block title %}
   {{ 'Navigation.statistiques'|trans }}
{% endblock %}

{% block breadcrumb %}
   <li class="breadcrumb-item active">{{ 'Navigation.statistiques'|trans }}</li>
{% endblock breadcrumb %}


{% block body %}

   <div class="row">
      <div class="col-md-12">
         <!-- /.panel-heading -->
         {% include 'admin/default/blocFilter.html.twig'  %}

            <div class="table-responsive">
               <table class="table table-striped table-condensed table-hover table-bordered table-sm">
                  <thead>
                     <tr>
                        <th>{{ 'Generics.fields.name'|trans }} </th>
                        <th>{{ 'Stats.nbDysf'|trans }} </th>
                     </tr>
                  </thead>
                  <tbody>
                     {% for entity in abrisResults %}
                        <tr>
                           <td><a href="{{ path('admin_abris_edit', {'id': entity.id}) }}">{{ entity.name }} <i class="far fa-arrow-alt-circle-right"></i></a></td>
                           <td>{{ entity.dysfonctionnements|length }}</td>
                        </tr>
                     {% else %}
                        <tr>
                           <td colspan="2">{{ 'Generics.messages.no_records_found'|trans }}</td>
                        </tr>
                     {% endfor %}
                  </tbody>
               </table>
            </div>
         <!-- /.panel-body -->
      </div>
   </div>

{% endblock %}
