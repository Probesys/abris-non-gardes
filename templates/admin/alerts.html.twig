{% block content_alert %}
    {% if app.session.flashbag.peekAll()|length %}
        <div id="alert-box">
            {% if app.session.flashbag.has('notice') or app.session.flashbag.has('info') %}
                <div class="alert alert-info alert-dismissible alert-auto-hidden" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {% for flashMessage in app.session.flashbag.get('notice') %}
                            {{ flashMessage|trans|raw}}
                    {% endfor %}
                    {% for flashMessage in app.session.flashbag.get('info') %}
                        {{ flashMessage|trans|raw}}
                    {% endfor %}
                </div>
            {% endif %}
            {% if app.session.flashbag.has('warning') %}
                <div class="alert alert-warning alert-dismissible alert-auto-hidden" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {% for flashMessage in app.session.flashbag.get('warning') %}
                            {{ flashMessage|trans|raw }}
                    {% endfor %}
                </div>
            {% endif %}
            {% if  app.session.flashbag.has('success') %}
                <div class="alert alert-success alert-dismissible alert-auto-hidden" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {% for flashMessage in app.session.flashbag.get('success') %}
                            {{ flashMessage|trans|raw }}
                    {% endfor %}
                </div>
            {% endif %}
            {% if app.session.flashbag.has('error') or app.session.flashbag.has('danger') %}
                <div class="alert alert-danger alert-dismissible alert-auto-hidden" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {% for flashMessage in app.session.flashbag.get('error') %}
                            {{ flashMessage|trans|raw}}
                    {% endfor %}
                    {% for flashMessage in app.session.flashbag.get('danger') %}
                        {{ flashMessage|trans|raw}}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    {% endif %}
{% endblock content_alert %}
